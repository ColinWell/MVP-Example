<?xml version="1.0" encoding="utf-8"?>



<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:layout_width="match_parent"
    android:id="@+id/DecorationPage">
    <RelativeLayout android:id="@+id/layout_titlebar"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:background="#050505"
        xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:id="@+id/text_title"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:ellipsize="marquee"
        android:gravity="center_horizontal|center"
        android:singleLine="true"
        android:text="装修申请"
        android:textColor="#ffffffff"
        android:textSize="20dp" />

    </RelativeLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="装修申请人姓名：" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/decorationName"
        android:background="@drawable/edit_bg"/>
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="装修申请人电话：" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/decorationPhone"
        android:background="@drawable/edit_bg"/>
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="装修申请地点：" />
    <EditText
        android:id="@+id/decorationPlace"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_bg"/>
    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="装修开始时间：" />
    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="0-0-0"
        android:background="@drawable/edit_bg"
        android:id="@+id/tvShowDialog"
        />
    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="装修结束时间：" />
    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="0-0-0"
        android:background="@drawable/edit_bg"
        android:id="@+id/tvShowDialog1"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="提交"
        android:id="@+id/decorationSubmit"/>



</LinearLayout>