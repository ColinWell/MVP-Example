<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="@dimen/activity_vertical_margin_half"
    android:paddingBottom="@dimen/activity_vertical_margin_half"
    android:background="@color/windowBackground">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginBottom="2dp"
        >
    <TextView
        android:id="@+id/menu_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2018-04-03 18:09:21"
        android:textSize="@dimen/badge_text_size"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        />
    <TextView
        android:id="@+id/menu_month"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:text="3个月"
        android:textSize="@dimen/badge_text_size"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">
    <TextView
        android:id="@+id/menu_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="物业费"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        />
    <TextView
        android:id="@+id/menu_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:text="￥509.00"
        android:textSize="20sp"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        />
    </RelativeLayout>
</LinearLayout>
